<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SmtMAUI.Controls"
             x:Class="SmtMAUI.CadastroContribuintes">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="Purple"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="CellLabelStyle" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Background="#ECECEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Tabela -->
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <controls:Header Grid.Row="0" />

        <!-- Tabela com Frame de Fundo -->
        <Frame Grid.Row="1"
               CornerRadius="15"
               BorderColor="#FFC0A8A8"
               BackgroundColor="#DED8E1"
               Padding="10"
               HasShadow="True"
               Margin="10">

            <!-- Layout para Tabela e Botão -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" /> <!-- Tabela -->
                    <RowDefinition Height="50" /> 
                </Grid.RowDefinitions>

                <!-- Tabela -->
                <CollectionView x:Name="ContribuintesCollectionView"
                                Grid.Row="0"
                                VerticalOptions="FillAndExpand">

                    <CollectionView.Header>
                        <Grid ColumnSpacing="1" BackgroundColor="#FFFFFF" Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Nome" Style="{StaticResource HeaderLabelStyle}" Grid.Column="0"/>
                            <Label Text="Ocupação" Style="{StaticResource HeaderLabelStyle}" Grid.Column="1"/>
                            <Label Text="Identificador" Style="{StaticResource HeaderLabelStyle}" Grid.Column="2"/>
                            <Label Text="Consultório/Guichê" Style="{StaticResource HeaderLabelStyle}" Grid.Column="3"/>
                            <Label Text="Especialidade" Style="{StaticResource HeaderLabelStyle}" Grid.Column="4"/>
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Padding="5" Margin="0,3,0,3" HasShadow="True" BackgroundColor="White">
                                <Grid ColumnSpacing="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Nome}" Style="{StaticResource CellLabelStyle}" Grid.Column="0"/>
                                    <Label Text="{Binding Ocupacao}" Style="{StaticResource CellLabelStyle}" Grid.Column="1"/>
                                    <Label Text="{Binding Identificador}" Style="{StaticResource CellLabelStyle}" Grid.Column="2"/>
                                    <Label Text="{Binding GuicheConsultorio}" Style="{StaticResource CellLabelStyle}" Grid.Column="3"/>
                                    <Label Text="{Binding Especialidade}" Style="{StaticResource CellLabelStyle}" Grid.Column="4"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Botão no canto inferior direito -->
                <ImageButton
                    Grid.Row="1"
                    Padding="10"
                    Source="adicionar.png"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    HeightRequest="75"
                    WidthRequest="75"
                    Clicked="OnAdicionarContribuinteClicked" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
